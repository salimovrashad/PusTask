@model IEnumerable<SliderListItemVM>
<section class="hero-area hero-slider-1">
    <div class="sb-slick-slider" data-slick-setting='{
                            "autoplay": true,
                            "fade": true,
                            "autoplaySpeed": 3000,
                            "speed": 3000,
                            "slidesToShow": 1,
                            "dots":true
                            }'>
        @foreach (var slider in Model)
        {
        <div class="single-slide bg-shade-whisper  ">
            <div class="container">
                <div class="home-content text-center text-sm-center position-relative">
                    <div class="hero-partial-image @(slider.IsLeft == true ? "image-right" : slider.IsLeft == false ? "image-left" : "image-right") ">
                        <img src="@slider.ImageUrl" alt="photo">
                    </div>
                        <div class="row no-gutters d-flex @(slider.IsLeft == true ? "justify-content-start" : slider.IsLeft == false ? "justify-content-end" : "justify-content-start")">
                        <div class="col-xl-6 col-md-6 col-sm-7">
                            <div class="home-content-inner content-left-side">
                                <h1>
                                    @slider.Title
                                </h1>
                                <h2>@slider.Description</h2>
                                <a href="shop-grid.html" class="btn btn-outlined--primary">
                                    $78.09 - Order Now!
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        }
    </div>
</section>
